<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.pregnant.health.view.SettingItemView
        android:id="@+id/siv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:key="手机号码"
        app:value="*必填"
         />

    <View style="@style/style_split_line"/>

    <com.pregnant.health.view.SettingItemView
        android:id="@+id/siv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:key="姓名"
        app:value="*必填"
         />

    <View style="@style/style_split_line"/>

    <com.pregnant.health.view.SettingItemView
        android:id="@+id/siv_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:key="出生年月"
        app:value="*必填"
         />

    <View style="@style/style_split_line"/>

    <com.pregnant.health.view.SettingItemView
        android:id="@+id/siv_tall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:key="身高"
        app:value="*必填"
         />

    <View style="@style/style_split_line"/>

    <com.pregnant.health.view.SettingItemView
        android:id="@+id/siv_last_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:key="末次月经"
        app:value="*必填"
         />

    <View style="@style/style_split_line"/>

    <com.pregnant.health.view.SettingItemView
        android:id="@+id/siv_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:key="孕前体重"
        app:value="*必填"
         />

    <View style="@style/style_split_line"/>

    <TextView
        android:id="@+id/btn_register"
        style="@style/style_btn"
        android:text="注册"
        />
</LinearLayout>